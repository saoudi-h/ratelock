# Backend mode selection
# Possible values: 'api' | 'local'
# - 'api': Uses Next.js API routes with database access (Redis, MongoDB)
# - 'local': Uses @ratelock/local client-side only (for public demos)
NEXT_PUBLIC_BACKEND_MODE=api

# API Configuration (when BACKEND_MODE=api)
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_API_TIMEOUT=10000  # Request timeout in milliseconds

# Redis Configuration (required when BACKEND_STORAGE=redis)
REDIS_URL=redis://:testpassword@localhost:6339
KEY_PREFIX=playground:  # Namespace prefix for all Redis keys

# Storage Backend Selection
# Possible values: 'local' | 'redis'
# Determines where rate limit counters are persisted
NEXT_PUBLIC_BACKEND_STORAGE=redis
