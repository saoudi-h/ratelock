{
  "name": "ratelock",
  "private": true,
  "description": "RateLock is a rate limiting library for Node.js",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "clean": "turbo clean && rimraf node_modules coverage",
    "changeset:version": "changeset version",
    "changesetrelease": "changeset publish",
    "typecheck": "turbo typecheck",
    "prepare": "husky",
    "pre-commit": "turbo pre-commit --concurrency=1",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@ratelock/eslint": "workspace:*",
    "@ratelock/prettier": "workspace:*",
    "@ratelock/tsconfig": "workspace:*",
    "@ratelock/vitest": "workspace:*",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chai": "^5.3.1",
    "consola": "^3.4.2",
    "eslint": "^9.33.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "unplugin-unused": "^0.5.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saoudi-h/ratelock.git"
  },
  "keywords": [
    "rate-limiting",
    "rate-locking",
    "rate-lock",
    "ratelimit",
    "redis",
    "nextjs",
    "express",
    "fastify",
    "rate-limiter",
    "nestjs",
    "middleware",
    "security",
    "typescript"
  ],
  "author": {
    "name": "Saoudi Hakim",
    "url": "https://hakimsaoudi.dev",
    "email": "saoudihakim@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6"
  }
}
