{
    "name": "@ratelock/core",
    "description": "Core RateLock rate limiting system",
    "version": "0.1.1",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.cts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./factory": {
            "import": "./dist/factory/index.mjs",
            "require": "./dist/factory/index.cjs"
        },
        "./limiter": {
            "import": "./dist/limiter/index.mjs",
            "require": "./dist/limiter/index.cjs"
        },
        "./storage": {
            "import": "./dist/storage/index.mjs",
            "require": "./dist/storage/index.cjs"
        },
        "./strategy": {
            "import": "./dist/strategy/index.mjs",
            "require": "./dist/strategy/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsdown",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --max-warnings 0 --fix",
        "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --write",
        "clean": "rimraf node_modules dist",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "prepublishOnly": "pnpm run build",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@ratelock/eslint": "workspace:*",
        "@ratelock/prettier": "workspace:*",
        "@ratelock/tsconfig": "workspace:*",
        "@ratelock/tsdown": "workspace:*",
        "@ratelock/vitest": "workspace:*",
        "@types/node": "^24.3.0",
        "@vitest/coverage-v8": "^3.2.4"
    },
    "keywords": [
        "core",
        "rate-locking",
        "rate-lock",
        "ratelimit",
        "redis",
        "nextjs",
        "express",
        "fastify",
        "rate-limiter",
        "nestjs",
        "middleware",
        "security",
        "typescript"
    ],
    "author": {
        "name": "Saoudi Hakim",
        "url": "https://hakimsaoudi.dev",
        "email": "saoudihakim@gmail.com"
    },
    "license": "MIT",
    "engines": {
        "node": ">=16"
    },
    "module": "./dist/index.mjs"
}
