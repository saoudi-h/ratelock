{
    "name": "@ratelock/eslint",
    "version": "1.0.0",
    "private": true,
    "description": "A package to share ESLint configurations in workspace",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "default": "./src/index.js",
            "types": "./src/index.d.ts"
        }
    },
    "scripts": {
        "clean": "rimraf *.tsbuildinfo node_modules",
        "lint": "eslint .  --max-warnings 0",
        "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.2",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.33.0",
        "@next/eslint-plugin-next": "^15.4.7",
        "@ratelock/prettier": "workspace:*",
        "@ratelock/tsconfig": "workspace:*",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^24.3.0",
        "@typescript-eslint/utils": "^8.40.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-playwright": "^2.2.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-regexp": "^2.10.0",
        "eslint-plugin-storybook": "^9.1.2",
        "eslint-plugin-turbo": "^2.5.6",
        "globals": "^16.3.0",
        "typescript-eslint": "^8.40.0"
    }
}
