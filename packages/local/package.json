{
    "name": "@ratelock/local",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.mjs",
            "require": "./dist/cjs/index.cjs",
            "types": "./dist/types/index.d.ts"
        },
        "./package.json": {
            "default": "./package.json"
        }
    },
    "scripts": {
        "build": "tsdown",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --max-warnings 0 --fix",
        "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --write",
        "clean": "rimraf node_modules dist",
        "typecheck": "tsc"
    },
    "devDependencies": {
        "@ratelock/core": "workspace:*",
        "@ratelock/eslint": "workspace:*",
        "@ratelock/prettier": "workspace:*",
        "@ratelock/tsconfig": "workspace:*",
        "@ratelock/tsdown": "workspace:*",
        "@types/node": "^24.0.13"
    },
    "keywords": [
        "@ratelock",
        "storage",
        "memory",
        "rate-locking",
        "rate-lock",
        "ratelimit",
        "typescript"
    ],
    "author": {
        "name": "Saoudi Hakim",
        "url": "https://hakimsaoudi.dev",
        "email": "saoudihakim@gmail.com"
    },
    "license": "MIT",
    "engines": {
        "node": ">=16"
    }
}
